# memOS Server Configuration Template
# Copy this file to .env and configure your values

# Server Configuration
MEMOS_HOST=localhost
MEMOS_PORT=8001
MEMOS_DEBUG=true
MEMOS_ENVIRONMENT=development

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=memos_recovery_bot
POSTGRES_USER=memos_user
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Vector Database Configuration
VECTOR_STORE=pgvector
CHROMA_DB_PATH=/home/sparkone/sdd/Recovery_Bot/memOS/server/data/chroma
EMBEDDING_MODEL=mxbai-embed-large
EMBEDDING_DIMENSIONS=1024

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Ollama Integration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://${OLLAMA_HOST}:${OLLAMA_PORT}
OLLAMA_MODEL=llama3.3:70b
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# Authentication and Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Memory Configuration
MAX_MEMORIES_PER_USER=10000
MEMORY_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
DEFAULT_MEMORY_TYPE=conversational
AUTO_SUMMARIZATION_THRESHOLD=1000

# Privacy and HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_YEARS=7
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_MEMORY_ANONYMIZATION=true
DEFAULT_PRIVACY_LEVEL=balanced

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Storage Configuration
STORAGE_PATH=/home/sparkone/sdd/Recovery_Bot/memOS/server/storage
LOG_PATH=/home/sparkone/sdd/Recovery_Bot/memOS/server/logs
BACKUP_PATH=/home/sparkone/sdb/memOS_backups

# Development Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://deals.sparkonelabs.com
DEBUG_MEMORY_OPERATIONS=true

# Recovery Bot Integration
RECOVERY_BOT_API_URL=https://deals.sparkonelabs.com/Recovery_Bot
RECOVERY_BOT_API_KEY=your-recovery-bot-api-key
SYNC_WITH_RECOVERY_BOT=true

# Monitoring and Metrics
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=8002
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true